@model List<string>

@{
    ViewData["Title"] = $"{ViewData["ActionName"]} for {ViewData["AnimalName"]}";
}

<h1>@ViewData["ActionName"] for @ViewData["AnimalName"]</h1>
<link rel="stylesheet" href="~/css/ActionResultListAnimals.css" />

@if (Model.Count > 0)
{
    <ul>
        @foreach (var message in Model)
        {
            <li>@message</li>
        }
    </ul>
}
else
{
    <p>No results to display.</p>
}

<a asp-action="Index" class="btn btn-primary">Back to Animals</a>
