@model WebApplication1.Models.Animal

@{
    ViewData["Title"] = "Animal Details";
}

<h1>Details for @Model.Name</h1>
<link rel="stylesheet" href="~/css/DetailsAnimal.css" />

<div>
    <h4>Animal Information</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>

        <dt class="col-sm-2">
            Species
        </dt>
        <dd class="col-sm-10">
            @Model.Species
        </dd>

        <dt class="col-sm-2">
            Category
        </dt>
        <dd class="col-sm-10">
            @Model.Category?.Name ?? "No Category"
        </dd>

        <dt class="col-sm-2">
            Size
        </dt>
        <dd class="col-sm-10">
            @Model.AnimalSize
        </dd>

        <dt class="col-sm-2">
            Diet
        </dt>
        <dd class="col-sm-10">
            @Model.Diet
        </dd>

        <dt class="col-sm-2">
            Activity Pattern
        </dt>
        <dd class="col-sm-10">
            @Model.activityPattern
        </dd>

        <dt class="col-sm-2">
            Prey
        </dt>
        <dd class="col-sm-10">
            @Model.Prey ?? "N/A"
        </dd>

        <dt class="col-sm-2">
            Enclosure
        </dt>
        <dd class="col-sm-10">
            @Model.Enclosure?.Name ?? "No Enclosure"
        </dd>

        <dt class="col-sm-2">
            Space Requirement
        </dt>
        <dd class="col-sm-10">
            @Model.SpaceRequirement sqm
        </dd>

        <dt class="col-sm-2">
            Security Requirement
        </dt>
        <dd class="col-sm-10">
            @Model.SecurityRequirement
        </dd>

        <dt class="col-sm-2">
            Status
        </dt>
        <dd class="col-sm-10">
            @Model.Status ?? "Unknown"
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
