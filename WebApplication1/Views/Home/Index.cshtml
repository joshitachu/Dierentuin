@model List<WebApplication1.Models.Animal>

<h2>Dierenlijst</h2>
<table>
    <thead>
        <tr>
            <th>Naam</th>
            <th>Soort</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var animal in Model)
        {
            <tr>
                <td>@animal.Name</td>
                <td>@animal.species</td>
            </tr>
        }
    </tbody>
</table>

<a href="/Home/AddAnimal">Nieuw Dier Toevoegen</a>
