@model WebApplication1.Models.Category

@{
    ViewData["Title"] = "Delete";
}

<link rel="stylesheet" href="~/css/DeleteCategories.css" />

<div class="center-wrapper">
    <h1>Delete</h1>
    <h3 class="delete-warning">Are you sure you want to delete this?</h3>
    <div>
        <h4 class="category-title">Category</h4>
        <hr />
        <table class="table table-narrow">
            <tbody>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    <td>@Html.DisplayFor(model => model.Name)</td>
                </tr>
            </tbody>
        </table>
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-backtolist">Back to List</a>
        </form>