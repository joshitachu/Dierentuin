@model WebApplication1.Models.Enclosure

@{
    ViewData["Title"] = "Assign Animal";
}

<h1>Assign Animal to Enclosure: @Model.Name</h1>

<form asp-action="AssignAnimal" method="post">
    <input type="hidden" name="id" value="@Model.Id" />
    <div class="form-group">
        <label for="AnimalId">Select Animal:</label>
        <select id="AnimalId" name="animalId" class="form-control">
            @foreach (var animal in (IEnumerable<SelectListItem>)ViewData["AnimalList"])
            {
                <option value="@animal.Value">@animal.Text</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary mt-2">Assign Animal</button>
</form>

<a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary mt-3">Back to Details</a>
