@model IEnumerable<string>

@{
    //shared service to show results of assigning missing animals
    ViewData["Title"] = ViewData["ActionName"] ?? "Action Results";
}

<h1>@ViewData["Title"]</h1>

@if (Model != null && Model.Any())
{
    <ul>
        @foreach (var result in Model)
        {
            <li>@result</li>
        }
    </ul>
}
else
{
    <p>All animals are already assigned.</p>
}

<a asp-controller="Home" asp-action="Index" class="btn btn-primary">Back to Zoo</a>
